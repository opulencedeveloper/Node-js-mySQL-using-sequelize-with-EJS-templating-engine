<form action="/cart" method="post">
    <button class="btn" type="submit">Add to Cart</button>
    <!-- on the server this input will read as an obj, {productId: product.id} 
    it is like the body of this request, so read it as req.body.productId
    -->
    <input type="hidden" name="productId" value="<%= product.id %>">
</form>